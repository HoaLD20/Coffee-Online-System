                            <a class="dropdown-item" href="@Url.Action("Cart", "HomePage")">Cart</a>
                            <a class="dropdown-item" href="@Url.Action("Checkout", "HomePage")">Checkout</a>
                        </div>
                    </li>
                    <li class="nav-item"><a href="contact.html" class="nav-link">Contact</a></li>
                    @{ var a = @Session["login"]; }
                    @if (a != null)
                    {

                    }
